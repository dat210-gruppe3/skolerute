<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="skolerute.Views.StartUpPage"
             Title="Hovedside">
	<ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0, 20, 0, 0" />
     </ContentPage.Padding>
    
    <StackLayout Spacing="10">
        <ProgressBar x:Name="progressBar" Progress="0" />
        <StackLayout>
            
            <Label Text="Dine skoler:" HorizontalOptions="Center" FontSize="Large" />
            <ListView x:Name="dineskoler" ItemSelected="ShowDayOff" >
                <ListView.ItemTemplate >
                    <DataTemplate>
                        <TextCell Text="{Binding name}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <Label Text="Legg til skole" HorizontalOptions="Center" FontSize="Large" />
        <SearchBar x:Name="searchSchool" Placeholder="SÃ¸k etter skoler" TextChanged="TextChanged"/>
        <ListView x:Name="skoler" ItemSelected="OnSelection">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
	</StackLayout>
</ContentPage>