<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="skolerute.Views.StartUpPage"
             Title="Hovedside">
	<ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0, 20, 0, 0" />
     </ContentPage.Padding>
    
    <StackLayout Spacing="10">
        <ProgressBar x:Name="progressBar" Progress="0" />
        <StackLayout>
            
            <Label Text="Mine skoler:" HorizontalOptions="Center" FontSize="Large" />
            <ListView x:Name="mineskoler" ItemSelected="OnDeletion">
                <ListView.ItemTemplate >
                    <DataTemplate>
                        <TextCell Text="{Binding}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
      <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
      <Label Text="Legg til skole" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Large" />
        <Button x:Name="GC" Text="Vis nærmeste" Clicked="GetClosest" HorizontalOptions="End"/>
        <Button x:Name="GA" Text="  Vis Alle  " Clicked="TextChanged" IsVisible="false"/>
      </StackLayout>
      <SearchBar x:Name="searchSchool" Placeholder="Søk etter skoler" TextChanged="TextChanged" SearchButtonPressed="TextChanged"/>
        <ListView x:Name="skoler" ItemSelected="OnSelection">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
	</StackLayout>
</ContentPage>